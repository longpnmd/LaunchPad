    },
    "deal": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::deal.deal",
      "inversedBy": "notes"
    },
    "property": {
      "type": "relation",
      "relation": "manyToOne", 
      "target": "api::property.property",
      "inversedBy": "notes"
    },
    "task": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::task.task",
